<Window x:Class="DailyCommissionPanel.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DailyCommissionPanel"
        mc:Ignorable="d"
        Title="设置"
        Width="600"
        Height="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Background="{DynamicResource PanelBackgroundColor}">
    <Window.Resources>
        <ResourceDictionary>
            <!-- 主题将在代码中动态加载 -->
            <ResourceDictionary.MergedDictionaries>
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="TitleTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            </Style>
            <Style x:Key="LabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
                <Setter Property="Margin" Value="0,10,0,5"/>
            </Style>
            <Style x:Key="ButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{DynamicResource ButtonBackgroundColor}"/>
                <Setter Property="Foreground" Value="{DynamicResource ButtonTextColor}"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Padding" Value="15,8"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="MinWidth" Value="100"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{DynamicResource ButtonHoverColor}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="设置" Style="{StaticResource TitleTextStyle}" Margin="0,0,0,20"/>

            <!-- 晚自习结束时间设置 -->
            <GroupBox Header="晚自习设置" Margin="0,0,0,20" Background="{DynamicResource GroupBoxBackgroundColor}" Foreground="{DynamicResource TextColor}">
                <StackPanel Margin="10">
                    <Label Content="晚自习结束时间:" Style="{StaticResource LabelStyle}"/>
                    <StackPanel Orientation="Horizontal">
                        <ComboBox x:Name="HourComboBox" Width="80" Height="30" Margin="0,0,10,0" Style="{DynamicResource ComboBoxStyle}">
                            <!-- 小时选项将在代码中动态添加 -->
                        </ComboBox>
                        <TextBlock Text=":" FontSize="16" VerticalAlignment="Center" Foreground="{DynamicResource TextColor}"/>
                        <ComboBox x:Name="MinuteComboBox" Width="80" Height="30" Margin="10,0,0,0" Style="{DynamicResource ComboBoxStyle}">
                            <!-- 分钟选项将在代码中动态添加 -->
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- 左侧文字内容设置 -->
            <GroupBox Header="左侧文字设置" Margin="0,0,0,20" Background="{DynamicResource GroupBoxBackgroundColor}" Foreground="{DynamicResource TextColor}">
                <StackPanel Margin="10">
                    <Label Content="左侧显示的文字内容 (每行一条):" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="RulesTextBox" Height="150" Width="Auto" AcceptsReturn="True" TextWrapping="Wrap" Margin="0,0,0,10" Background="{DynamicResource TextBoxBackgroundColor}" Foreground="{DynamicResource TextColor}" BorderBrush="{DynamicResource BorderColor}"/>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="AddRuleButton" Content="添加" Style="{StaticResource ButtonStyle}" Click="AddRuleButton_Click"/>
                        <Button x:Name="ClearRulesButton" Content="清空" Style="{StaticResource ButtonStyle}" Click="ClearRulesButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- 按钮区域 -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="SaveButton" Content="保存" Style="{StaticResource ButtonStyle}" Click="SaveButton_Click"/>
                <Button x:Name="CancelButton" Content="取消" Style="{StaticResource ButtonStyle}" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>