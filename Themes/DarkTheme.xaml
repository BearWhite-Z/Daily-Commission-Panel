<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:System.Windows.Media;assembly=PresentationCore">

    <!-- 阴影效果 -->
    <DropShadowEffect x:Key="ButtonShadow" BlurRadius="6" ShadowDepth="2" Color="#00000030"/>
    <DropShadowEffect x:Key="CardShadow" BlurRadius="8" ShadowDepth="3" Color="#00000030"/>

    <!-- 基础颜色 -->
    <SolidColorBrush x:Key="BackgroundColor" Color="#121212"/>
    <SolidColorBrush x:Key="TextColor" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryTextColor" Color="#a0a0a0"/>
    <SolidColorBrush x:Key="PlaceholderTextColor" Color="#707070"/>
    <SolidColorBrush x:Key="BorderColor" Color="#333333"/>

    <!-- 组件颜色 -->
    <SolidColorBrush x:Key="HeaderBackgroundColor" Color="#315174"/>
    <SolidColorBrush x:Key="PanelBackgroundColor" Color="#1e1e1e"/>
    <SolidColorBrush x:Key="CardBackgroundColor" Color="#2D2D2D"/>
    <SolidColorBrush x:Key="TimerBackgroundColor" Color="#FFFFFF40"/>
    <SolidColorBrush x:Key="TimerLabelColor" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ImagePlaceholderBackgroundColor" Color="#333333"/>
    <SolidColorBrush x:Key="AccentColor" Color="#315174"/>
    <SolidColorBrush x:Key="CardShadowColor" Color="#00000030"/>
    <SolidColorBrush x:Key="ButtonHoverColor" Color="#FFFFFF30"/>
    <SolidColorBrush x:Key="ButtonPressedColor" Color="#FFFFFF40"/>

    <!-- 按钮样式 -->
    <Style x:Key="NavButtonStyle" TargetType="Button">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="15,10,15,10"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="16" Effect="{StaticResource ButtonShadow}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Background" Value="#FFFFFF15"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource ButtonHoverColor}"/>
                <Setter Property="Opacity" Value="0.9"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource ButtonPressedColor}"/>
                <Setter Property="Opacity" Value="0.8"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="ThemeToggleButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10,6,10,6"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinWidth" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="16" Effect="{StaticResource ButtonShadow}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FFFFFF15"/>
                <Setter Property="Opacity" Value="0.9"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#FFFFFF30"/>
                <Setter Property="Opacity" Value="0.8"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="ActionButtonStyle" TargetType="Button">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="20,12,20,12"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="Height" Value="45"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="8" Effect="{StaticResource ButtonShadow}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Background" Value="#165DFF"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#4080FF"/>
                <Setter Property="Opacity" Value="0.9"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#0E42D2"/>
                <Setter Property="Opacity" Value="0.8"/>
            </Trigger>
        </Style.Triggers>
    </Style>

